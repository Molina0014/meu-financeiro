{
    "rewrites": [
        {
            "source": "/api/transactions/:id",
            "destination": "/api/transactions?id=:id"
        },
        {
            "source": "/api/goals/:id",
            "destination": "/api/goals?id=:id"
        },
        {
            "source": "/api/accounts/:id",
            "destination": "/api/accounts?id=:id"
        }
    ],
    "headers": [
        {
            "source": "/api/(.*)",
            "headers": [
                { "key": "Access-Control-Allow-Origin", "value": "*" },
                {
                    "key": "Access-Control-Allow-Methods",
                    "value": "GET, POST, PUT, DELETE, OPTIONS"
                },
                {
                    "key": "Access-Control-Allow-Headers",
                    "value": "Content-Type"
                }
            ]
        }
    ]
}
